extends layout

block content
  h1= title
  - if(query.rows < 1 && query.rows > 10 && Number.isInteger(query.rows))
    p Rows: #{query.rows}
  - if(query.cols < 1 && query.cols > 10 && Number.isInteger(query.rows))
    p Cols: #{query.cols}

  - let rows = Number(query.rows)
  - let cols = Number(query.cols)

  - if (!Number.isInteger(rows))
    p Rows must be numbers not decimal.
  - if(!Number.isInteger(cols))
    p Cols must be numbers not decimal.
  - if (rows < 1 || rows > 10)
    p Rows need to be in the range of 1 to 10.
  - if (cols < 1 || cols > 10)
    p Cols need to be in the range of 1 to 10.
  - else
    table#outer
      - for (let i = 0; i < rows; i++)
        tr#middle
          - for (let j = 0; j < cols; j++)
              - if (i == j)
                td 1
              - else if (i == j + 1)
                td 2
              - else if (i == j - 1)
                td #{i}
              - else
                td 0