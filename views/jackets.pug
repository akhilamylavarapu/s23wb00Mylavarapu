extends layout

block content
  h1= title
  - let jackets = results;

  div(class="container-fluid")
      each jacket in jackets
        - let destination = `dispatch("/jackets/update?id=${jacket._id}")`
        div(class="col-sm-2")
          p JacketName: #{jacket.costume_type}
          p JacketCost: $#{jacket.cost}
          p JacketSize: #{jacket.size}
        button.btn.btn-sm.btn-primary.ml-1(onclick= destination) Update
        br 
        br

  script.
    function dispatch(path) {
      window.location.href = path;
    }

